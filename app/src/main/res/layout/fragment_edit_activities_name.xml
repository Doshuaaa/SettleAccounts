            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:hint="@string/name"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:visibility="@{viewModel.visibleList[0]}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/people_edit_text_view1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType = "textNoSuggestions"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:hint="@string/name"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:visibility="@{viewModel.visibleList[1]}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/people_edit_text_view2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType = "textNoSuggestions"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:hint="@string/name"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:visibility="@{viewModel.visibleList[2]}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/people_edit_text_view3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType = "textNoSuggestions"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:hint="@string/name"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:visibility="@{viewModel.visibleList[3]}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/people_edit_text_view4"
